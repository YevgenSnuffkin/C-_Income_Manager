<Window x:Class="WpfApplication1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop" Height="253" Width="300" Background="White" Foreground="White">
    <Grid Background="#FF75A69B">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="0,101,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" FontFamily="Trebuchet MS" Grid.Column="1"/>
        <TextBox x:Name="tboxRent" HorizontalAlignment="Left" Height="23" Margin="27,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Rent" GotFocus="TextBox_GotFocus"/>
        <TextBox x:Name="tboxFood" HorizontalAlignment="Left" Height="23" Margin="27,76,0,0" TextWrapping="Wrap" Text="Food" VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus"/>
        <TextBox x:Name="tboxClothes" HorizontalAlignment="Left" Height="23" Margin="27,114,0,0" TextWrapping="Wrap" Text="Clothes" VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus"/>
        <TextBox x:Name="tboxIncome" HorizontalAlignment="Left" Height="23" Margin="27,154,0,0" TextWrapping="Wrap" Text="Income" VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus"/>

    </Grid>
</Window>
